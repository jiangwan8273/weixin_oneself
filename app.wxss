/* 全局统一设置提提大小和颜色 */
page {
  color: #333;
  font-size: 26rpx;
}

/* 全局标准色 */
.bgc_pub {
  background: #398bf7;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.box_flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.box_flex_vertical {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.global__fix_tabbar {
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}